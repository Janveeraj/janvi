    <script>
        // Cute interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            const memoryCards = document.querySelectorAll('.memory-card');
            const addButton = document.querySelector('.cute-button');
            
            // Memory card interactions
            memoryCards.forEach(card => {
                card.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95) rotate(-2deg)';
                    
                    // Create cute heart effect
                    const heart = document.createElement('div');
                    heart.innerHTML = 'üíñ';
                    heart.className = 'absolute text-2xl animate-ping';
                    heart.style.left = Math.random() * 80 + 10 + '%';
                    heart.style.top = Math.random() * 80 + 10 + '%';
                    this.appendChild(heart);
                    
                    setTimeout(() => {
                        this.style.transform = '';
                        heart.remove();
                    }, 300);
                });
            });
            
            // Add button animation
            addButton.addEventListener('click', function() {
                this.innerHTML = '<span class="animate-pulse text-xl">Creating magic...</span>';
                
                // Create floating stars effect
                for (let i = 0; i < 5; i++) {
                    const star = document.createElement('div');
                    star.innerHTML = '‚≠ê';
                    star.className = 'absolute text-2xl animate-bounce';
                    star.style.left = Math.random() * 100 + '%';
                    star.style.top = Math.random() * 100 + '%';
                    this.appendChild(star);
                    
                    setTimeout(() => star.remove(), 2000);
                }
                
                setTimeout(() => {
                    this.innerHTML = '<span class="relative z-10 flex items-center"><svg class="w-6 h-6 mr-2 bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>Add School Memory</span>';
                }, 2000);
            });
            
            // Add random floating elements on page load
            function addFloatingElements() {
                const elements = ['üìñ', 'üé®', 'üçï', 'üéµ', 'üé≠', 'üñçÔ∏è', 'üìù'];
                const container = document.querySelector('.container');
                
                elements.forEach((emoji, index) => {
                    const el = document.createElement('div');
                    el.innerHTML = emoji;
                    el.className = 'absolute text-3xl opacity-20 pointer-events-none';
                    el.style.left = Math.random() * 90 + 5 + '%';
                    el.style.top = Math.random() * 90 + 5 + '%';
                    el.style.animation = `float ${4 + Math.random() * 4}s ease-in-out infinite`;
                    el.style.animationDelay = index * 0.5 + 's';
                    container.appendChild(el);
                });
            }
            
            addFloatingElements();
        });
    </script>











