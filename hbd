  <button class="floating-btn" aria-label="Scroll to top" title="Back to top" id="scrollTopBtn">
    <i class="fas fa-arrow-up"></i>
  </button>

  <script>
    // Category filter logic
    const buttons = document.querySelectorAll(".category-btn");
    const pins = document.querySelectorAll(".pin-card");

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        // Update active button
        buttons.forEach((b) => {
          b.classList.remove("active");
          b.setAttribute("aria-pressed", "false");
        });
        btn.classList.add("active");
        btn.setAttribute("aria-pressed", "true");

        const category = btn.getAttribute("data-category");
        pins.forEach((pin) => {
          if (category === "all" || pin.getAttribute("data-category") === category) {
            pin.style.display = "block";
          } else {
            pin.style.display = "none";
          }
        });
      });
    });

    // Save button fun effect
    document.querySelectorAll(".pin-save").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        e.stopPropagation();
        btn.textContent = "Pinned! üéâ";
        btn.disabled = true;
        setTimeout(() => {
          btn.textContent = "Pin It!";
          btn.disabled = false;
        }, 2000);
      });
    });

    // Scroll to top button
    const scrollBtn = document.getElementById("scrollTopBtn");
    window.addEventListener("scroll", () => {
      if (window.scrollY > 300) {
        scrollBtn.style.display = "flex";
      } else {
        scrollBtn.style.display = "none";
      }
   
</body>
</html>

